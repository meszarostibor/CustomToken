<Window x:Class="CustomTokenTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomToken"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1200" WindowStartupLocation="CenterScreen" HorizontalAlignment="Left">
    <Grid Height="632" HorizontalAlignment="Center" Margin="0,1,0,1" Width="1200">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dataGrid1" d:ItemsSource="{d:SampleData ItemCount=5}" Width="930" Height="600" HorizontalAlignment="Left" VerticalAlignment="Top" SelectionChanged="dataGrid1_SelectionChanged"/>
        <Button x:Name="btnGenerateToken" Content="Generate token" HorizontalAlignment="Left" Margin="936,124,0,0" VerticalAlignment="Top" Width="247" Height="20" Click="btnGenerateToken_Click"/>
        <ComboBox x:Name="cmbLevel" HorizontalAlignment="Left" Margin="1137,97,0,0" VerticalAlignment="Top" Width="46" SelectedIndex="0" RenderTransformOrigin="0.511,1.838" Height="22"/>
        <Label Content="Level:" HorizontalAlignment="Left" Margin="930,95,0,0" VerticalAlignment="Top" Width="78" Height="26"/>
        <Label Content="User name:" HorizontalAlignment="Left" Margin="930,70,0,0" VerticalAlignment="Top" Height="26" Width="69"/>
        <TextBox x:Name="txbUserName" HorizontalAlignment="Left" Margin="999,73,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="184" Height="19"/>
        <Label Content="User Id:" HorizontalAlignment="Left" Margin="930,18,0,0" VerticalAlignment="Top" Height="26" Width="50"/>
        <TextBox x:Name="txbUserId" HorizontalAlignment="Left" Margin="935,47,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="248" Height="21"/>
        <Button Content="Generate Id" HorizontalAlignment="Left" Margin="999,22,0,0" VerticalAlignment="Top" Width="184" Height="18" Click="Button_Click"/>
        <TextBox x:Name="tbxVerification" HorizontalAlignment="Left" Margin="936,179,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="247" Height="61"/>
        <Button x:Name="btnVerification" Content="Token verification" HorizontalAlignment="Left" Margin="936,245,0,0" VerticalAlignment="Top" Width="247"/>


    </Grid>
</Window>
